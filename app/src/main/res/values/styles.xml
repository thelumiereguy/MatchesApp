<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="montserrat_regular_font">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="montserrat_bold_font">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="montserrat_light_font">
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="regular_font_24sp">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="regular_font_20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="regular_font_18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="regular_font_16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_font_14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="regular_font_12sp">
        <item name="android:textSize">12sp</item>
    </style>


</resources>
