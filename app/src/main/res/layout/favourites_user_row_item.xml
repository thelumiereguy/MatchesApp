<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:background="@color/backgroundLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/onboarding_button_margins">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/favouritesAvatarDimens"
                android:layout_height="@dimen/favouritesAvatarDimens"
                app:cardCornerRadius="@dimen/onboarding_button_margins"
                app:cardElevation="@dimen/home_page_corner_radius">

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="@string/user_image_transition" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/home_page_elevation"
                android:baselineAligned="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/montserrat_bold_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/favourites_margin_top"
                    android:textAppearance="@style/regular_font_16sp" />


                <TextView
                    android:id="@+id/tv_location"
                    style="@style/montserrat_light_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/favourites_margin_top"
                    android:textAppearance="@style/regular_font_14sp" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/montserrat_light_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/favourites_margin_top"
                    android:textAppearance="@style/regular_font_14sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/onboarding_button_margins"
            android:layout_marginEnd="@dimen/onboarding_button_margins"
            android:background="@color/colorDesaturatedBlack" />

    </LinearLayout>


</layout>
