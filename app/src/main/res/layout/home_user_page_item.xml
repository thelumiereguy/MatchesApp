<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/genreDataRowColumnItemTopBottomMargin"
        app:cardElevation="6dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:background="@drawable/black_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/genreDataRowColumnItemTopBottomMargin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location"
                style="@style/montserrat_regular_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="random Text"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/regular_font_16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/colorWhite"
                    style="@style/montserrat_bold_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="random Text"
                    android:textAppearance="@style/regular_font_20sp" />

                <TextView
                    android:layout_marginStart="4dp"
                    style="@style/montserrat_bold_font"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:text=","
                    android:textAppearance="@style/regular_font_20sp" />


                <TextView
                    android:id="@+id/tv_age"
                    style="@style/montserrat_bold_font"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/genreDataRowColumnItemTopBottomMargin"
                    android:text="random Text"
                    android:textAppearance="@style/regular_font_20sp" />

            </LinearLayout>



        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>